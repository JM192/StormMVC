@model BusinessLogicLayer.UserBLL

@{
    ViewBag.Title = "Modify User Info";
}

<h2>Modify User Information</h2>
<style>
    div {
        color:rgb(128, 128, 128)
    }
    h2 {
        color:rgb(0, 144, 255)
    }
    h3 {
        color:rgb(96, 107, 113)
    }
