            @Html.EditorFor(model => model.Add_Ons, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Add_Ons, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">        
