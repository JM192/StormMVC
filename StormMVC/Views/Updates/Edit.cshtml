@model BusinessLogicLayer.UpdateBLL

@{
    ViewBag.Title = "Modify Updates";
}
<style>
    h2 {
        color:rgb(0, 144, 255)
    }
    h3 {
        color:rgb(96, 107, 113)
    }
    div {
        color:rgb(128, 128, 128)
    }
    dd {
        color:rgb(15, 98, 178)
    }
</style>
<h2>Modify Available Updates</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
