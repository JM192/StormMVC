        <div class="col-md-10">
            @Html.HiddenFor(model => model.UpdateID, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Patch, "Patch: ", htmlAttributes: new { @class = "control-label col-md-2" })
