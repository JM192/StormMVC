@model IEnumerable<BusinessLogicLayer.RoleBLL>

@{
    ViewBag.Title = "All Roles";
}

<h2>All Roles and Corresponding Information</h2>
<style>
    th {
        color: rgb(0, 148, 255);
    }

    td {
        color: rgb(144, 144, 144)
    }

    h2 {
        color: rgb(0, 148, 255);
    }
</style>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover table-responsive" style="background-color: rgba(27, 27, 27, 0.85);">
    <thead>
        <tr>
            <th>
                @Html.Label("#")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Privileges)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
<tbody>
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoleID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Privileges)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.RoleID }) |
            @Html.ActionLink("Details", "Details", new { id = item.RoleID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.RoleID })
        </td>
    </tr>
</tbody>
    }

</table>
