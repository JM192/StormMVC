@model IEnumerable<BusinessLogicLayer.PaymentBLL>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<style>
    th {
        color: rgb(0, 148, 255);
    }

    td {
        color: rgb(144, 144, 144)
    }

    h2 {
        color: rgb(0, 148, 255);
    }
</style>
<table class="table table-hover table-responsive" style="background-color: rgba(27, 27, 27, 0.85);">
    <thead>
        <tr>
            <th>
                @Html.Label("#")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ph_num)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Card_num)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Security_code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>

@foreach (var item in Model) {
<tbody>
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ph_num)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Card_num)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Security_code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.PaymentID }) 
            @Html.ActionLink("Details", "Details", new { id = item.PaymentID })             
        </td>
    </tr>
</tbody>
}

</table>
