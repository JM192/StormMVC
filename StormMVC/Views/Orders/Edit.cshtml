@model BusinessLogicLayer.OrderBLL

@{
    ViewBag.Title = "Edit Order Info";
}
<style>
    div {
        color:rgb(128, 128, 128)
    }
    h2 {
        color:rgb(0, 148, 255)
    }
</style>

<h2>Edit Order Information</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
