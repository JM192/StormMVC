@model IEnumerable<BusinessLogicLayer.OrderBLL>

@{
    ViewBag.Title = "All Orders";
}

<h2>All Orders</h2>
<style>
    th {
        color: rgb(0, 148, 255);
    }

    td {
        color: rgb(144, 144, 144)
    }

    h2 {
        color: rgb(0, 148, 255);
    }
</style>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover table-responsive" style="background-color: rgba(27, 27, 27, 0.85);">
    <thead>
        <tr>
            <th>
                @Html.Label("#")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purchase_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game_Title)
            </th>
        </tr>
    </thead>

@foreach (var item in Model) {
<tbody>
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Order_Num)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Purchase_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GameID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Game_Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Order_Num }) |
            @Html.ActionLink("Details", "Details", new { id = item.Order_Num }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Order_Num })
        </td>
    </tr>
</tbody>
}

</table>
